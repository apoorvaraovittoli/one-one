<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
       <td><%= birthday.date_of_birth %></td>
        <td><%= link_to 'Show', user_birthday_path(@user,birthday) %></td>
        <td><%= link_to 'Edit', edit_user_birthday_path(@user,birthday) %></td>
        <td><%= link_to 'Destroy', user_birthday_path(@user,birthday), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

